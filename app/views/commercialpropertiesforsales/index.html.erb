  <div class="left">
    <%= t('jumbotron_commercialtitle_html') %>
  
 </div>
 </div>
  <div class="left">
     <%= t('searchcommercial_html') %>

<%= form_tag search_commercialpropertiesforsales_path, method: :get do %>
          <p>
<%= text_field :search, params[:search], placeholder: t('searchtextbox'),class: "form-control" %><br>

<%= submit_tag t('searchbtn'), name: nil ,class: "btn btn-success" %>
      </p>
</div>
      <% end %>


 <div class="thumbnail">
    <div class="center"> 
    <div class="row">
    <% @commercialpropertiesforsales.each do |commercialpropertiesforsale| %>
    <div class="col-md-3">
    <div class="thumbnail">
      <%= link_to image_tag(commercialpropertiesforsale.image.url), commercialpropertiesforsale %>
    <div class="caption">
       <h4><strong><%= label_tag :nil, "NOMBRE DEL MEDICAMENTO" %></strong></h4>
      <h3><strong><%= commercialpropertiesforsale.property_description %></strong></h3>
      <p>
        <p><%= t('listed_by', user: commercialpropertiesforsale.user.name) %></p>
        <h5><strong><%= label_tag :nil, "CODIGO DEL MEDICAMENTO" %></h5></strong><h4><%= residential.mls_number %></h4><br>
        <h5><strong><%= label_tag :nil, "UP" %></h5></strong><h4><%= residential.action %></h4><br>
        <h5><strong><%= label_tag :nil, "SALDO AL INICIO DEL MES" %></h5></strong><h4><%= residential.zipcode %></h4><br>
        <h5><strong><%= label_tag :nil, "FECHA DE VENCIMIENTO" %></h5></strong><h4><%= residential.construction_type %></h4><br>
        <h5><strong><%= label_tag :nil, "CANTIDAD DE PACIENTES" %></h5></strong><h4><%= residential.year_completed %></h4><br>
      </p>
        <td><%= link_to 'Show', commercialpropertiesforsale, class: "btn btn-warning" %></td>
        <% if (user_signed_in?) && (current_user == commercialpropertiesforsale.user) %>
        <td><%= link_to 'Edit', edit_commercialpropertiesforsale_path(commercialpropertiesforsale), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', commercialpropertiesforsale, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
         <% end %>
    </div>
  </div>
</div>
    <% end %>
  </div>
</div>
</div>

